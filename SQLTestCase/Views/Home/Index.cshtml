@using SQLTestCase.Helpers
@model SQLTestCase.Models.QueryModel

<form asp-action="Index" method="post" class="p-3 mb-3 border">
    <div class="form-group">
        <label asp-for="QueryText">SQL query</label>
        <textarea class="form-control" asp-for="QueryText" rows="3"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Execute</button>
</form>

<div class="card">
    <div class="card-body">

        @if (!string.IsNullOrEmpty(Model.Message))
        {
            <div class="alert alert-danger" role="alert">
                <h1>Error</h1>
                @Model.Message
            </div>
        }
        @if (!string.IsNullOrEmpty(Model.Result))
        {
            <h1>Result</h1>
            <div class="alert alert-success" role="alert">
                @Model.Result
            </div>
        }

        @if (Model.ListResult != null && Model.ListResult.Any())
        {
            <h1>Result</h1>
            @Html.TableHelper(Model.ColumnName, Model.ListResult)
        }
    </div>
</div>